# ==============================================
# AURUM POS - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Node environment - set to 'production' for live deployment
NODE_ENV=development

# Server port - most hosting providers will set this automatically
# Default: 5000 (works with most providers like Railway, DigitalOcean, etc.)
PORT=5000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Examples:
#   - Local: postgresql://username:password@localhost:5432/aurum_pos
#   - DigitalOcean: postgresql://username:password@db-host.db.ondigitalocean.com:25061/aurum_pos?sslmode=require
#   - Railway: postgresql://username:password@host.railway.internal:5432/aurum_pos
#   - Neon: postgresql://username:password@ep-host.neon.tech/aurum_pos?sslmode=require
#   - Supabase: postgresql://postgres:password@db.supabase.co:6543/postgres
#   - AWS RDS: postgresql://username:password@instance.region.rds.amazonaws.com:5432/aurum_pos
DATABASE_URL=postgresql://username:password@localhost:5432/aurum_pos

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Session secret - MUST be at least 32 characters long for security
# Generate a secure random string: openssl rand -hex 32
# or use: https://generate-secret.vercel.app/32
SESSION_SECRET=your-super-secret-session-key-must-be-at-least-32-characters-long

# ==============================================
# CORS CONFIGURATION
# ==============================================

# Allowed origins for CORS (comma-separated)
# Examples:
#   - Single domain: https://yourdomain.com
#   - Multiple domains: https://yourdomain.com,https://app.yourdomain.com
#   - Allow all (development only): *
CORS_ORIGINS=*

# ==============================================
# HOSTING PROVIDER SPECIFIC
# ==============================================

# Railway.app
# RAILWAY automatically sets PORT and provides DATABASE_URL if you add PostgreSQL

# Vercel
# VERCEL=1 is automatically set by Vercel

# DigitalOcean App Platform
# Automatically sets PORT, you need to configure DATABASE_URL in app settings

# Heroku
# Automatically sets PORT and DATABASE_URL (if Postgres add-on is added)

# ==============================================
# OPTIONAL FEATURES
# ==============================================

# Enable/disable features (true/false)
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# File upload configuration (optional)
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=uploads

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================
# SMTP EMAIL CONFIGURATION (Optional)
# ==============================================
# Uncomment and configure if you want to enable email features

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=Aurum POS

# ==============================================
# EXTERNAL INTEGRATIONS (Optional)
# ==============================================
# Configure if you plan to use external services

# Payment gateway (Stripe, PayPal, etc.)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Cloud storage (AWS S3, Cloudinary, etc.)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# These are only used in development mode

# Enable debug logging
DEBUG=false

# Hot reload (development)
HOT_RELOAD=true